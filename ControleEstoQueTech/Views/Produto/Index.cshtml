@model GeralVM
@{
    Layout = "_Layout";
}


<a type="button" class="btn btn-primary" asp-controller="Produto" asp-action="Cadastrar">Cadastrar</a>
<br />
<br />

<ejs-grid id="Grid" dataSource="@Model.Produtos" toolbar="@(new List<string>() { "Search"})" allowPaging="true">
    <e-grid-pagesettings pageSize="5">
    </e-grid-pagesettings>
<e-grid-searchsettings fields="@(new string[] { "ProdutoId","Nome","Descricao","Categoria.Descricao","Preco","Fornecedor.Empresa"})"></e-grid-searchsettings>
<e-grid-columns>
    <e-grid-column field="ProdutoId" headerText="Código" textAlign="Center" width="120"></e-grid-column>
    <e-grid-column field="Nome" headerText="Produto" width="150" textAlign="Center"></e-grid-column>
    <e-grid-column field="Descricao" headerText="Decriçao" width="130" textAlign="Center" format="yMd"></e-grid-column>
    <e-grid-column field="Categoria.Descricao" headerText="Categoria" width="120" textAlign="Center"></e-grid-column>
    <e-grid-column field="Preco" headerText="Preço" width="120" textAlign="Center"></e-grid-column>
    <e-grid-column field="Fornecedor.Empresa" headerText="Fornecedor" width="120" textAlign="Center"></e-grid-column>

    <e-grid-column template="
                       <a type='button' class='btn btn-danger m-1' href='/Produto/Excluir?ProdutoId=${ProdutoId}'>Excluir</a>
                       <a type='button' class='btn btn-primary m-1' href='/Produto/Edit?ProdutoId=${ProdutoId}'>Editar</a>
                       <a type='button' class='btn btn-primary' href='/Produto/Info?ProdutoId=${ProdutoId}'>Info</a>
                       "></e-grid-column>

</e-grid-columns>
</ejs-grid>


