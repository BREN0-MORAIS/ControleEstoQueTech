<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Controle de Estoque</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!----Global Assets CSS-->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link href="~/GlobasAssets/css/icons/icomoon/styles.min.css" rel="stylesheet" type="text/css">
    <link href="~/GlobasAssets/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/GlobasAssets/assets/css/bootstrap_limitless.min.css" rel="stylesheet" type="text/css">
    <link href="~/GlobasAssets/assets/css/layout.min.css" rel="stylesheet" type="text/css">
    <link href="~/GlobasAssets/assets/css/components.min.css" rel="stylesheet" type="text/css">
    <link href="~/GlobasAssets/assets/css/colors.min.css" rel="stylesheet" type="text/css">
    <!-- /global stylesheets -->
    <!-- Core JS files -->
    <script src="~/GlobasAssets/js/main/jquery.min.js"></script>
    <script src="~/GlobasAssets/js/main/bootstrap.bundle.min.js"></script>
    <script src="~/GlobasAssets/js/plugins/loaders/blockui.min.js"></script>
    <!-- /core JS files -->
    <!-- Theme JS files -->
    <script src="~/GlobasAssets/js/plugins/forms/styling/switchery.min.js"></script>
    <script src="~/GlobasAssets/js/plugins/forms/styling/uniform.min.js"></script>
    <script src="~/GlobasAssets/js/plugins/forms/selects/select2.min.js"></script>

    <script src="~/GlobasAssets/assets/js/app.js"></script>
    <script src="~/GlobasAssets/js/demo_pages/form_actions.js"></script>
    <!-- /theme JS files -->
    <!-- Syncfusion Essential JS 2 Styles -->
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/material.css" />

    <!-- Syncfusion Essential JS 2 Scripts -->
    <script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> Controle de Estoque</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Produto" asp-action="Index">Produto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categoria" asp-action="Index">Categorias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Fornecedor" asp-action="Index">Fornecedor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Estoque" asp-action="Index">Estoque</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - ControleEstoQueTech - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function Sucesso() {

            Swal.fire({
                position: 'center',
                icon: 'success',
                title: 'Deletado com Sucesso',
                showConfirmButton: false,
                timer: 3000
            });

        }

     

    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>

<ejs-scripts></ejs-scripts>
